class Solution:
    def reverse(self, x: int) -> int:
        List = list(str(x))
        lol = []

        for i in range(len(List)):
            if List[i] != "-":
                lol.insert(0,List[i])
        if  List[0] == '-':
            lol.insert(0,'-')

        answer = int(''.join(map(str, lol)))
        if answer < 2147483647 and answer > -2147483647:
            return answer
        else:
            return 0
