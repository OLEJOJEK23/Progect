        for dt in range(dt, 0, -1):
            if t == 24 * 60:
                t = (t - 24 * 60)
                price = price + (s - (s * 0.3))
            else:
                if t > 22 * 60 or t < 8 * 60:
                    disc1 = 0.9
                    disc2 = 0.8
                    price = price + (s * disc1 * disc2)
                else:
                    disc1 = 0.9
                    price = price + (s * disc1)
                t = t + 1
        print(round(price, 2))
    case 7:
