@bot.message_handler(content_types=['text'])
def skorelorb1(message):
    global number1
    number1 = float(message.text)
    number1 = number1 ** 2
    mes = bot.send_message(message.chat.id, text=f"Введите квантовое число")
    bot.register_next_step_handler(mes, skorelorb2)


@bot.message_handler(content_types=['text'])
def skorelorb2(message):
    global number2
    number2 = float(message.text)
    bot.send_message(message.chat.id, text=f"Скорость = {number1/(pi * 4 * number2 * e0 * hmal)} м/с")


@bot.message_handler(content_types=['text'])
