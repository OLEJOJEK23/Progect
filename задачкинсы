#Билет N27
'''
def factorial(n):
    if n <= 1:
        return 1
    else:
        return n * factorial(n - 1)
print("Факториал числа равен:", factorial(int(input("Введите число: "))))
'''


#Билет N28
'''
from random import randint
list = [[randint(1, 100) for i in range(5)] for j in range(5)]
sum = 0
for i in range(5):
    for j in range(5):
        print(list[i][j], end='\t')
        if i == j:
            if list[i][j] % 2 == 0:
                sum += list[i][j]
    print("")
print(sum)
