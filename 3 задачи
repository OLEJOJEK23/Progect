    case 5:
        t = float(input("Введите время начала разговора: "))
        if t <= 0 or t >= 24: exit()
        if t >= 22 or t <= 8: discount = 0.2
        dt = float(input("Введите время разговора в минутах: "))
        s = float(input("Введите стоимость разговора за минуту: "))
        discount = (dt * s * discount)
        price = (dt * s) - discount
        print(f"Цена разговора:{price} ")
    case 6:
        t = float(input("Введите время начала разговора: "))
        discount = 0.1
        if t <= 0 or t >= 24: exit()
        if t >= 22 or t <= 8: discount = 0.2 + discount
        dt = float(input("Введите время разговора в минутах: "))
        s = float(input("Введите стоимость разговора за минуту: "))
        discount = (dt * s * discount)
        p1 = (((dt - 222) * s) - discount)
        discount1 = (222 * s * 0.1)
        p2 = (222 * s) - discount1
        price = p2 + p1
        print(f"Цена разговора: {price} ")
    case 7:
        t = float(input("Введите время начала разговора: "))
        discount = 0.1
        if t <= 0 or t >= 24: exit()
        if t >= 22 or t <= 8: discount = 0.2 + discount
        dt = float(input("Введите время разговора в минутах: "))
        s = float(input("Введите стоимость разговора за минуту: "))
        discount = (dt*s * discount)
        price = (dt * s) - discount
        print(f"Цена разговора:{price} ")
